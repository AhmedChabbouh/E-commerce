{% extends 'base.html.twig' %}
{% block title %}Your Wishlist{% endblock %}

{% block stylesheets %}
    <style>


        .wishlist-container {
            margin-top: 50px;
        }

        .wishlist-table {
            background-color: #ffffff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .wishlist-table thead th {
            background-color: #716969;
            color: #ffffff;
            text-align: center;
            vertical-align: middle;
        }

        .wishlist-table td {
            vertical-align: middle;
            text-align: center;
        }

        .product-image {
            width: 230px;
            height: 230px;
            object-fit: cover;
            border-radius: 8px;
            margin: 10px;
        }

        .action-btn {
            background: none;
            border: none;
            cursor: pointer;
            margin: 0 5px;
            padding: 0;
        }
        .action-icon {
            width: 24px;
            height: 24px;
        }
        .details-btn:hover {
            opacity: 0.8;
        }



        @media (max-width: 768px) {
            .wishlist-table thead {
                display: none;
            }

            .wishlist-table tbody td {
                display: block;
                width: 100%;
                text-align: left;
                padding: 1rem;
                border-bottom: 1px solid #333;
            }

            .wishlist-table tbody td:last-child {
                border-bottom: none;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container wishlist-container">
        <h2 class="mb-4 text-center ">Your Wishlist</h2>

        <div class="table-responsive">
            <table class="table wishlist-table">
                <thead>
                <tr>
                    <th colspan="2">Product</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr id="{{ product.getId() }}" class="product-id">
                        <td>
                            <img  class="product-image"  src="{{  asset('uploads/images/' ~ product.image) }}" alt='' onerror="this.src='{{ product.image }}'"></td>
                        <td>
                            <h5 > {{ product.getName()}} </h5>
                            <p > {{ product.getDescription()|raw }} </p></td>
                        </td>
                        <td class="price">{{ product.getPrice() }} $</td>
                        <td>
                            <a href="{{ path('app_product_details', {'productId': product.getId()}) }}"
                               class="action-btn details-btn"
                               title="View Details">
                                <img src="{{ asset('images/info.jpg') }}"
                                     alt="View Details"
                                     class="action-icon">
                            </a>
                            <form action="{{ path('app_wish_listapp_wishlist_add', {id: product.getId()}) }}" method="post" style="display: inline;">
                                <button class="action-btn remove-btn" title="Remove from Wishlist">
                                    <img src="{{ asset('images/img.png') }}"
                                         alt="delete from wishlist"
                                         class="action-icon">
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
