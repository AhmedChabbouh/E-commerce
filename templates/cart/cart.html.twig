{% extends 'base.html.twig' %}
{% block title %}Your Cart{% endblock %}
{% block body %}

    <div class="container " style="margin-top:50px;">
        <div class="d-flex flex-row mb-3">

            {% for product in products %}
                <div class="p-2"">
                    <div class="card" id="{{ product.getId() }}" style="height:20em;margin-bottom:25px">
                <div class="d-flex flex-row mb-3">
                    <div class="p-2">
                        <img  style="width:18em;" src= {% block image %} {{ product.getImage()}} {% endblock %}>
                    </div>
                    <div class="p-2">
                            <h5 class="card-title">{% block name %} {{ product.getName()}} {% endblock %}</h5>
                            <p class="card-text">{% block description %} {{ product.getDescription()}} {% endblock %}</p>
                        </div>
                    <div class="p-2">
                            <label>{% block price %} {{ product.getPrice()}} {% endblock %}$</label><br><br>

                        </div>
                    </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}
