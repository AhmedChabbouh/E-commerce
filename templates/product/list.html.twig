{% extends 'base.html.twig' %}
{% block title %}Product list{% endblock %}
{% block body %}

    <div class="container " style="margin-top:50px;">
    <div class="row">

    {% for product in products %}
        <div class="col-3 "style="display:flex; align-items: stretch;">
<div class="card" id="{{ product.getId() }}" style="width: 18rem;height:auto;margin-bottom:25px">
    <img class="card-img-top " style="height:350px;" src=  {{ product.getImage()}} >
    <div class="card-body">
    <h5 class="card-title"> {{ product.getName()}} </h5>

    <p class="card-text"> {{ product.getDescription()}} </p>
    <label> {{ product.getPrice()}} $</label><br><br>
        <form method="POST" action="{{ path('app_cartadd_to_cart', {id: product.getId()}) }}">
            <button  id="{{ product.getId() }}" class="btn btn-primary" >Add to cart ðŸ›’</button>
        </form>

    </div>
</div>
        </div>
    {% endfor %}

    </div>
    </div>
{% endblock %}


