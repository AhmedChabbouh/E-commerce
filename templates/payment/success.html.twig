{% extends 'base.html.twig' %}

{% block title %}Payment Success{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #f8f8f0; /* Creamy white */
            font-family: 'Helvetica Neue', Arial, sans-serif;
            line-height: 1.6;
