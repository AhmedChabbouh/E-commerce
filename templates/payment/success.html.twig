            font-size: 48px;
            margin-bottom: 20px;
            display: block;
        }

        .email-link {
            color: #5a8f5a;
            font-weight: 500;
        }

        .home-btn {
            display: inline-block;
            background: #5a8f5a;
            color: white;
            padding: 12px 25px;
            border-radius: 4px;
            text-decoration: none;
            margin-top: 20px;
            font-size: 16px;
        }

        .home-btn:hover {
            background: #4a7a4a;
        }
